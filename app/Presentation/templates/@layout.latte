<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
	{asset? 'main.js'}
</head>

<body>
	<header class="p-3">
	<a n:href="Home:default">LOGO</a>
	<a class="btn btn-primary" n:if="$user->isLoggedIn() && $user->getIdentity()->role == 2" n:href="Product:add">Přidat produkt</a>
	<a n:if="!$user->isLoggedIn()" n:href="sign:in" class="btn btn-primary">Přihlásit se</a>
	<a n:if="$user->isLoggedIn()" n:href="sign:out" class="btn btn-primary">Odhlásit se</a>
	</header>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

	<div class="container">
		{include content}
	</div>

	
	
	<script type="module" src="{$basePath}/build/assets/main-JfqVaZJE.js"></script>
</body>
</html>
