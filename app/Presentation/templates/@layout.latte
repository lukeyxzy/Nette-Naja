<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@300..700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="{$basePath}/css/style.css">
		{asset? 'main.js'}
</head>

<body>
	<header class="p-3 bg-light mx-auto">
	<div class="container"> 
	<div class="row">
		<div class="col-6 d-flex">
			<div class="my-auto"> <a n:href="Home:default" class="me-4">LOGO</a> </div>
			
			<div class="d-flex"> {control categoryGrid}   </div>
			
			</div>
			<div class="col-6 text-end">
			{if $user->isAllowed("adminSide", "view")}
		<span class="text-danger me-2 fw-bold ">Přihlášen jako moderátor webu</span>	<a n:href=":admin:home:default" class="btn btn-primary">ADMINISTRACE</a>
			{/if}
			{if $user->isAllowed("product", "add")}
			<a class="btn btn-success" n:href="product:add">Přidat Produkt</a>
			<a n:href="user:default $user->getIdentity()->id" class="btn btn-warning" >Váš profil</a>
			{/if}
			{if $user->isAllowed('frontSide', 'logout')}
			<a  n:href=":front:sign:out" class="btn btn-primary">Odhlásit se</a>
			{else}
			<a n:href="sign:in" class="btn btn-primary">Přihlásit se</a>
			{/if}
		</div>	
	</div>
		</div>
	</header>
	<div class="wrapper position-absolute top-0 start-50 w-25 translate-middle-x mt-3">
		<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>
		</div>
	<div class="container mt-5">
		{include content}
	</div>


	<script type="module" src="{$basePath}/build/assets/main-JfqVaZJE.js"></script>
</body>
</html>
