<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Nette Web</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
	{asset? 'main.js'}
	<link rel="stylesheet" href="{$basePath}/css/style.css">
</head>

<body>
	<header class="p-3 d-flex justify-content-between bg-light align-items-center">
	<div class="left d-flex">
	<div class="my-auto"> <a n:href="Home:default" class="me-4">LOGO</a> </div>
	<div class="d-flex"> {control categoryGrid}   </div>
	
	</div>
	<div class="right">
	<a class="btn btn-success" n:if="$user->isAllowed('product', 'add')" n:href="Product:add">Přidat produkt</a>
	{if $user->isAllowed('frontSide', 'logout')}
	<a n:if="$user->isAllowed('frontSide', 'logout')" n:href="sign:out" class="btn btn-primary">Odhlásit se</a>
	{else}
	<a n:href="sign:in" class="btn btn-primary">Přihlásit se</a>
	{/if}
	</div>	
	</header>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

	<div class="container">
		{include content}
	</div>

	
	
	<script type="module" src="{$basePath}/build/assets/main-JfqVaZJE.js"></script>
</body>
</html>
